    $("#submitOperationCost").click(function () {

        var description = $('#description').val().toUpperCase();
        var cost_Per_H = $('#OperationCost').val();
        var activeStatus = $('#active_status').val();

        if (description == '') {
            Toast.fire({
                icon: 'error',
                title: 'OperationCost name field is empty'
            });
            return false;
        }
        else {
            $.ajax({
                type: "POST",
                url: '/Product/SaveOperationCost',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    if (response != null) {

                        if (response === 'Success') {
                            Toast.fire({
                                icon: 'success',
                                title: response
                            });

                            $("#description").val("");
                            $("#OperationCost").val("");
                            $('.addnew').show();
                            setTimeout(function () {
                                location.reload();
                            }, 1500);
                        } else {
                            Toast.fire({
                                icon: 'error',
                                title: response
                            });
                            $('.addnew').show();
                        }
                    }
                },
                data: JSON.stringify({
                    description: description,
                    cost_Per_H: cost_Per_H,
                    activeStatus: activeStatus
                }),
                error: function () {

                    Toast.fire({
                        icon: 'error',
                        title: 'error'
                    });
                }
            });
        }

    });


